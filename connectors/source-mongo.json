{
  "name": "source-mongo",
  "config": {
    "connector.class": "com.mongodb.kafka.connect.MongoSourceConnector",

    "connection.uri": "mongodb://mongo:27017/?replicaSet=rs0",
    "database": "sales",
    "collection": "orders",

    "topic.prefix": "mongo",                
    "publish.full.document.only": "true",


    "copy.existing": "true",


    "output.format.value": "json",
    "output.format.key": "json",


    "pipeline": "[]"
  }
}
