{
  "name": "sink-crdb-from-mongo",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",

    "connection.url": "jdbc:postgresql://cockroach:26258/app?sslmode=disable",
    "connection.user": "root",

    "topics": "mongo.sales.orders",
    "table.name.format": "app.orders",

    "auto.create": "true",
    "insert.mode": "upsert",
    "pk.mode": "record_key",
    "pk.fields": "id",

    "delete.enabled": "true",
    "tombstones.on.delete": "true",

    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",

    "transforms": "RenameId,MakeKey,ExtractKey",

    "transforms.RenameId.type": "org.apache.kafka.connect.transforms.ReplaceField$Value",
    "transforms.RenameId.renames": "_id:id",

    "transforms.MakeKey.type": "org.apache.kafka.connect.transforms.ValueToKey",
    "transforms.MakeKey.fields": "id",

    "transforms.ExtractKey.type": "org.apache.kafka.connect.transforms.ExtractField$Key",
    "transforms.ExtractKey.field": "id"
  }
}
