{
  "name": "source-pg-jdbc",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSourceConnector",
    "connection.url": "jdbc:postgresql://postgres:5432/app",
    "connection.user": "app",
    "connection.password": "app",

    "mode": "timestamp",
    "timestamp.column.name": "updated_at",
    "validate.non.null": "true",

    "poll.interval.ms": "2000",
    "numeric.mapping": "best_fit",

    "query": "SELECT id, customer, total, origin, updated_at FROM public.orders WHERE origin = 'pg' AND updated_at > ? ORDER BY updated_at ASC",
    "topic.prefix": "pg_public.orders",

    "errors.tolerance": "all",
    "errors.deadletterqueue.topic.name": "_dlq_source_pg",
    "errors.deadletterqueue.topic.replication.factor": "1",
    "errors.deadletterqueue.context.headers.enable": "true"
  }
}
